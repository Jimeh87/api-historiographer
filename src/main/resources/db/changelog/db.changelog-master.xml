<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd ">

    <changeSet id="create-app-proxy" author="jimeh87">
        <createTable tableName="application_proxy">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="application" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="scheme" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="host" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="port" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-app-proxy-config-indexes" author="jimeh87">
        <createIndex indexName="idx_application"
                     tableName="application_proxy"
                     unique="true">
            <column name="application"/>
        </createIndex>
    </changeSet>

    <changeSet id="create-app-observer" author="jimeh87">
        <createTable tableName="application_observer">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="path" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="method" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="body" type="clob"/>
            <column name="polling_interval_minutes" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="create-rest-parameters" author="jimeh87">
        <createTable tableName="rest_parameter">
            <column name="id" type="varchar(36)">
                <constraints primaryKey="true"/>
            </column>
            <column name="parameter_key" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="parameter_value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="query_param_app_observer_id" type="varchar(36)">
                <constraints referencedTableName="application_observer" referencedColumnNames="id" foreignKeyName="fk_query_param_app_observer"/>
            </column>
            <column name="header_app_observer_id" type="varchar(36)">
                <constraints referencedTableName="application_observer" referencedColumnNames="id" foreignKeyName="fk_header_app_observer"/>
            </column>
            <column name="header_blacklist_app_proxy_id" type="varchar(36)">
                <constraints nullable="false" referencedTableName="application_proxy" referencedColumnNames="id" foreignKeyName="fk_header_bl_app_proxy"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>